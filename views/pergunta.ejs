<%- include("partials/header.ejs")%>
<body>
  <%- include("partials/navbar.ejs")%>
  <div class="container">
    <div class="card" id="cardTodo">
      <div class="card-header">
        <h1>Realizar pergunta</h1>
      </div>
      <div class="card-body">
        <form method="POST" action="/salvarpegunta">
          <br /><label>Titulo</label>
          <input
            type="text"
            placeholder="Informe sua pergunta aqui"
            class="form-control"
            name="titulo"
          />
          <br /><label>Descrição</label>
          <textarea
            name="texto"
            cols="30"
            rows="10"
            placeholder="descreva sua pergunta aqui"
            class="form-control"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
